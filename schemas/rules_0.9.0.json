				}
			}
		},
		"validation_rule": {
			"type": "object",
			"required": [
				"id",
				"name",
				"type",
				"error_type",
				"result_variable",
				"error_message",
				"active",
				"function"
			],
			"properties": {
				"id": {
					"minItems": 1,
					"maxItems": 1,
					"type": "integer"
				},
				"name": {
