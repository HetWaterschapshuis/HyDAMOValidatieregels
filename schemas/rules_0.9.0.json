				},
				"type": {
					"minItems": 1,
					"maxItems": 1,
					"type": "string",
					"enum": [
						"logic",
						"topologic"
					]
				},
				"exceptions": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"uniqueItems": true
				},
				"filter": {
					"maxItems": 1,
					"type": "object",
					"oneOf": [
						{
							"$ref": "#/$defs/LE"
						},
						{
							"$ref": "#/$defs/LT"
						},
						{
							"$ref": "#/$defs/GE"
						},
						{
							"$ref": "#/$defs/GT"
						},
						{
							"$ref": "#/$defs/EQ"
						},
						{
							"$ref": "#/$defs/ISIN"
						},
						{
