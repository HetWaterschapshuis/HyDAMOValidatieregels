					"minItems": 1,
					"maxItems": 1,
					"type": "string",
					"enum": [
						"critical",
						"non-critical"
					]
				},
				"penalty": {
					"maxItems": 1,
					"type": "integer",
					"minimum": 0,
					"maximum": 9
				},
				"result_variable": {
					"minItems": 1,
					"maxItems": 1,
					"type": "string",
					"pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
				},
				"error_message": {
					"minItems": 1,
					"maxItems": 1,
					"type": "string"
				},
				"active": {
					"minItems": 1,
					"maxItems": 1,
